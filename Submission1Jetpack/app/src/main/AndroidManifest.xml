<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.helga.submission1jetpack">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/film"
        android:label="@string/app_name"
        android:roundIcon="@drawable/film"
        android:supportsRtl="true"
        android:theme="@style/Theme.SubmissionJetpack">
        <activity android:name="com.helga.submission1jetpack.ui.detail.DetailMovieActivity"></activity>
        <activity android:name="com.helga.submission1jetpack.ui.detail.DetailTvshowActivity" />
        <activity android:name="com.helga.submission1jetpack.ui.splash.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.helga.submission1jetpack.ui.home.HomeActivity" />
    </application>

</manifest>